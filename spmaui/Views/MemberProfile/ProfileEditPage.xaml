                                            SelectedItem="{Binding ProfileBasicInfo.InterestedDesc}">
                                                <Picker.Items>
                                                    <x:String>Athletes and Sports</x:String>
                                                    <x:String>Athletic Trainers</x:String>
                                                    <x:String>Exercise Physiologists</x:String>
                                                    <x:String>Fitness Entrepreneur</x:String>
                                                    <x:String>Recreation Leader</x:String>
                                                    <x:String>Sports Announcers</x:String>
                                                    <x:String>Sports Coaches and Teachers</x:String>
                                                    <x:String>Sportscaster</x:String>
                                                </Picker.Items>
                                            </Picker>
                                        </StackLayout>

                                        <StackLayout HorizontalOptions="Start"  Spacing="1">
                                            <Label Text="Gender:" TextColor="#4A6792" FontAttributes="Bold"  Style="{StaticResource LabelStyle}"></Label>
                                            <Picker x:Name="Gender" HorizontalOptions="FillAndExpand" WidthRequest="100" TitleColor="Black"
                                            SelectedItem="{Binding ProfileBasicInfo.Sex}">
                                                <Picker.Items>
                                                    <x:String>Female</x:String>
                                                    <x:String>Male</x:String>
                                                </Picker.Items>
                                            </Picker>
                                        </StackLayout>

                                        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal" Spacing="8">
                                            <Label HorizontalOptions="StartAndExpand" VerticalOptions="Center" WidthRequest="250" HorizontalTextAlignment="Start"  Text="Show gender to other members:" FontSize="14"></Label>
                                            <Switch x:Name="showGender" HorizontalOptions="End" IsToggled="{Binding ProfileBasicInfo.ShowSexInProfile}" />
                                        </StackLayout>

                                        <StackLayout HorizontalOptions="StartAndExpand" Spacing="1">
                                            <Label  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" 
                                        Text="Birth Date:" />
                                            <DatePicker MinimumDate="01/01/1800" x:Name="BirthDate"  Date="{Binding ProfileBasicInfo.memProfileDOB}"
                                        MaximumDate="12/31/2900"/>
                                        </StackLayout>

                                        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal" Spacing="9">
                                            <Label HorizontalOptions="StartAndExpand" VerticalOptions="Center" HorizontalTextAlignment="Start"  Text="Looking for Employment:" WidthRequest="250" FontSize="14"></Label>
                                            <Switch x:Name="LookingForEmp" HorizontalOptions="End" IsToggled="{Binding ProfileBasicInfo.LookingForEmployment}"/>
                                        </StackLayout>

                                        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal" Spacing="9" Padding="0,8,0,0">
                                            <Label HorizontalOptions="StartAndExpand" VerticalOptions="Center" HorizontalTextAlignment="Start"  WidthRequest="250" Text="Looking for Recruitment:" FontSize="14"></Label>
                                            <Switch x:Name="lookingForRec" HorizontalOptions="End" IsToggled="{Binding ProfileBasicInfo.LookingForRecruitment}"/>
                                        </StackLayout>

                                        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal" Spacing="9" Padding="0,8,0,0">
                                            <Label HorizontalOptions="StartAndExpand" VerticalOptions="Center" HorizontalTextAlignment="Start"  Text="Looking for Partnership:" WidthRequest="250" FontSize="14"></Label>
                                            <Switch x:Name="lookingForPart" HorizontalOptions="End" IsToggled="{Binding ProfileBasicInfo.LookingForPartnership}" />
                                        </StackLayout>

                                        <StackLayout HorizontalOptions="StartAndExpand" Orientation="Horizontal" Spacing="9" Padding="0,8,0,0">
                                            <Label HorizontalOptions="StartAndExpand" VerticalOptions="Center" HorizontalTextAlignment="Start" WidthRequest="250" Text="Looking for Networking" FontSize="14"></Label>
                                            <Switch x:Name="lookingForNet" HorizontalOptions="End" IsToggled="{Binding ProfileBasicInfo.LookingForNetworking}" />
                                        </StackLayout>

                                        <StackLayout HorizontalOptions="FillAndExpand" Spacing="1" Padding="0,12,0,0">
                                            <Label  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" 
                                        Text="Biography:" />
                                            <Frame BorderColor="LightGray" HasShadow="False" Padding="0">
                                                <Editor x:Name="EditBio" BackgroundColor="White"  HeightRequest="100" WidthRequest="300" HorizontalOptions="Start"
                                        Text="{Binding ProfileBasicInfo.Bio}"/>
                                            </Frame>
                                        </StackLayout>

                                        <StackLayout Padding="0, 10, 70,0" HorizontalOptions="Start">
                                            <Button x:Name="SaveBasicInfo"  FontSize="Medium"
                                            Clicked="SaveButton_Clicked"
                                            TextColor="White" BorderColor="Black" BackgroundColor="{StaticResource Blue100Accent}"  CornerRadius="20"  
                                            FlexLayout.AlignSelf="Stretch"  HorizontalOptions="CenterAndExpand" FontAttributes="Bold" Text="Save"/>
                                        </StackLayout>

                                        <StackLayout Padding="0, 300, 90,0" HorizontalOptions="Start"></StackLayout>

                                    </StackLayout>

                                    <StackLayout Padding="0,15,0,0"
                                       x:Name="aiLayout"
                                       IsVisible="{Binding IsRefreshing}" 
                                       AbsoluteLayout.LayoutBounds="0,0,1,1"
                                       AbsoluteLayout.LayoutFlags="All"
                                       BackgroundColor="WhiteSmoke" Opacity="1.9">
                                       <ActivityIndicator
                                        x:Name="ai"
                                        IsRunning="{Binding IsRefreshing}"
                                        HorizontalOptions="CenterAndExpand"
                                        VerticalOptions="Center"
                                        Color="Black"/>
                                        <Label Text="Loading Data..." HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
                                    </StackLayout>
                                </AbsoluteLayout>
                            </ScrollView>
                        </Grid>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Contact Info.">
                    <tabView:SfTabItem.Content>
                        <Grid RowDefinitions="*, *" RowSpacing="0">
                            <ScrollView x:Name="ciView" Grid.Row="0" VerticalOptions="Fill">
                                <AbsoluteLayout VerticalOptions="FillAndExpand">
                                    <StackLayout BackgroundColor="White" Padding="10"

                                                 >

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="Email:"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.Email}" WidthRequest="300" Keyboard="Text" x:Name="Email" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="Other Email:"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.OtherEmail}" WidthRequest="300" Keyboard="Text" x:Name="OtherEmaill" Style="{StaticResource TextStyle}" />
                                    </StackLayout>
                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="Facebook:"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.Facebook}" Keyboard="Text" WidthRequest="300" x:Name="Facebook" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="Instagram:"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.Instagram}" WidthRequest="300" Keyboard="Text" x:Name="Instagram" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="Twitter Handle:"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.Twitter}" WidthRequest="300" Keyboard="Text" x:Name="Twitter" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="Website Url"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.Website}" WidthRequest="300" Keyboard="Text" x:Name="WebsiteUrl" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="Cell Phone:"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.CellPhone}" WidthRequest="300" Keyboard="Text" x:Name="CellPhone" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="Home Phone:"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.HomePhone}" WidthRequest="300" Keyboard="Text" x:Name="HomePhone" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="Address:"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.Address}" WidthRequest="300" Keyboard="Text" x:Name="Address" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="City:"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.City}" WidthRequest="270" Keyboard="Text" x:Name="City" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="State"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.State}" WidthRequest="270" Keyboard="Text" x:Name="State" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout HorizontalOptions="Start" Spacing="1">
                                        <Label Text="ZipCode"  Style="{StaticResource LabelStyle}" TextColor="#4A6792" FontAttributes="Bold" ></Label>
                                        <Entry Text="{Binding ProfileContactInfo.Zip}" WidthRequest="250" Keyboard="Text" x:Name="ZipCode" Style="{StaticResource TextStyle}"  />
                                    </StackLayout>

                                    <StackLayout Padding="0, 10, 0,0" HorizontalOptions="Start">
                                        <Button x:Name="SaveContactInfo"  FontSize="Medium"
                                        Clicked="SaveContactButton_Clicked"
                                        TextColor="White" BorderColor="Black" BackgroundColor="{StaticResource Blue100Accent}"  CornerRadius="20"  
                                        FlexLayout.AlignSelf="Stretch"  HorizontalOptions="Start" FontAttributes="Bold" Text="Save"/>
                                    </StackLayout>
                                    <StackLayout Padding="0, 310, 70,0" HorizontalOptions="Start"></StackLayout>

                                </StackLayout>

                                <StackLayout Padding="0,15,0,0"
                                    x:Name="aiLayoutCi"
                                    IsVisible="{Binding IsRefreshing}" 
                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                    AbsoluteLayout.LayoutFlags="All"
                                    BackgroundColor="White" Opacity="1.9">
                                        <ActivityIndicator
                                      x:Name="aiCi"
                                      IsRunning="{Binding IsRefreshing}"
                                      HorizontalOptions="CenterAndExpand"
                                      VerticalOptions="Center"
                                      Color="Black"/>
                                        <Label Text="Loading Data..." HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
                                </StackLayout>

                                </AbsoluteLayout>
                            </ScrollView>
                        </Grid>

                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Education">
                    <tabView:SfTabItem.Content>

                         <AbsoluteLayout VerticalOptions="FillAndExpand">
                            <StackLayout BackgroundColor="White">

                                
                                    <Grid>
                                        <Button Margin="0,10,0,0" Text="Tap Here to Add New School" HorizontalOptions="Center" CornerRadius="20"
                                        Command="{Binding Source={x:Reference collectionViewEd}, Path=BindingContext.AddNewCommand}"
                                        TextColor="White" BackgroundColor="{StaticResource Blue100Accent}" FontAttributes="Bold" />
                                    </Grid>
                                

                                <Grid BackgroundColor="White" x:Name="EducationGrid">


                            <!--pull:SfPullToRefresh x:Name="pulltorefresh"
                                    TransitionMode="Push" 
                                    PullingThreshold="100" 
                                    RefreshContentHeight="30"
                                    RefreshCommand="{Binding RefreshCommand}"
                                    IsRefreshing="{Binding IsRefreshing}"
                                    RefreshCommandParameter="{x:Reference collectionView}"
                                    RefreshContentThreshold="40"
                                    RefreshContentWidth="30">
                            <pull:SfPullToRefresh.PullableContent -->

                            <CollectionView ItemsSource="{Binding ProfileEducation}" HeightRequest="500"
                                  x:Name="collectionViewEd" 
                                  SelectionChanged="OnEducationSelectionChanged"
                                  Margin="10"                     
                                  SelectionMode="Single" >

                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" />
                                </CollectionView.ItemsLayout>

                                <!-- CollectionView.Header>
                                    <Grid>
                                        <Button Margin="0,0,0,0" Text="Tap Here to Add New School" HorizontalOptions="Center" CornerRadius="20"
                                        Command="{Binding Source={x:Reference collectionViewEd}, Path=BindingContext.AddNewCommand}"
                                        TextColor="White" BackgroundColor="{StaticResource Blue100Accent}" FontAttributes="Bold" />
                                    </Grid>
                                </CollectionView.Header -->

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>

                                        <SwipeView>
                                            <SwipeView.LeftItems>
                                                <SwipeItems Mode="Reveal" >
                                                    <SwipeItem Text="Edit" IconImageSource="editprofile7.png" 
                                                           BackgroundColor="Green"
                                                           Command="{Binding Source={x:Reference collectionViewEd}, Path=BindingContext.EditCommand}"
                                                           CommandParameter="{Binding .}">
                                                    </SwipeItem>
                                                    <SwipeItem Text="Delete" IconImageSource="reject2.png"
                                                           BackgroundColor="Red"            
                                                           Command="{Binding Source={x:Reference collectionViewEd}, Path=BindingContext.DeleteCommand}"
                                                           CommandParameter="{Binding .}">
                                                    </SwipeItem>
                                                </SwipeItems>
                                            </SwipeView.LeftItems>

                                            <StackLayout Spacing="8" Padding="5,10,10,10">
                                                <!--Frame -->
                                                <StackLayout>
                                                    <StackLayout Style="{StaticResource itemsInsideCardViewStackLayoutStyle}">
                                                        <Frame Style="{StaticResource profileImageFrameStyle}">
                                                            <Image Style="{StaticResource profileImageStyle}" Source="{Binding schoolImage}" />
                                                        </Frame>
                                                        <StackLayout Style="{StaticResource detailsStackLayout}">
                                                            <Label Text="{Binding schoolName}" Style="{StaticResource NameLabel}" />
                                                            <StackLayout Style="{StaticResource imageLableStackLayout}">
                                                                <Label Text="{Binding schoolAddress}" Style="{StaticResource TitleLabelStyle}" />
                                                            </StackLayout>
                                                            <StackLayout Style="{StaticResource imageLableStackLayout}">
                                                                <Label Text="{Binding major}" Style="{StaticResource LabelStyle}" />
                                                            </StackLayout>
                                                            <StackLayout Style="{StaticResource imageLableStackLayout}">
                                                                <Label Text="{Binding degree}" Style="{StaticResource LabelStyle}" />
                                                            </StackLayout>
                                                            <StackLayout Style="{StaticResource imageLableStackLayout}">
                                                                <Label Text="{Binding sportLevelType}" Style="{StaticResource LabelStyle}" />
                                                            </StackLayout>
                                                            <StackLayout Style="{StaticResource imageLableStackLayout}">
                                                                <Label Text="Swipe  right to edit or delete..." Style="{StaticResource LabelStyle}" />
                                                            </StackLayout>
                                                        </StackLayout>
                                                    </StackLayout>
                                                </StackLayout>
                                                <Frame Padding="0,0,0,0">
                                                <BoxView HeightRequest="0" BackgroundColor="LightGray"  HorizontalOptions="CenterAndExpand" VerticalOptions="End"/>
                                                    </Frame>
                                                </StackLayout>
                                        </SwipeView>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>

                                <CollectionView.EmptyView>
                                    <StackLayout>
                                        <Label x:Name="LblNoData" Text="No education information to display." 
                                        Margin="10,25,10,10"
                                        FontAttributes="Bold"
                                        IsVisible="{Binding ProfileEducation, Converter={StaticResource ListIsNullOrEmptyConverter}}"
                                        FontSize="18"
                                        HorizontalOptions="Fill"
                                        HorizontalTextAlignment="Center" />
                                    </StackLayout>
                                </CollectionView.EmptyView>
                            </CollectionView>

                            <!-- /pull:SfPullToRefresh.PullableContent>
            </pull:SfPullToRefresh -->
                        </Grid>
                                </StackLayout>

                            <StackLayout Padding="0,15,0,0"
                                    x:Name="aiLayoutEd"
                                    IsVisible="{Binding IsRefreshing}" 
                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                    AbsoluteLayout.LayoutFlags="All"
                                    BackgroundColor="White" Opacity="1.9">
                                <ActivityIndicator
                                      x:Name="aiEd"
                                      IsRunning="{Binding IsRefreshing}"
                                      HorizontalOptions="CenterAndExpand"
                                      VerticalOptions="Center"
                                      Color="Black"/>
                                <Label Text="Loading Data..." HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
                            </StackLayout>
                        </AbsoluteLayout>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Photos">
                    <tabView:SfTabItem.Content>
                         <AbsoluteLayout VerticalOptions="FillAndExpand">
                            <StackLayout BackgroundColor="White">
                             <Grid RowDefinitions="*, *" RowSpacing="0" x:Name="photosGrid">
                            <ScrollView x:Name="photosView" Grid.Row="0">
                                <StackLayout BackgroundColor="White" Padding="10" HeightRequest="900" WidthRequest="380">

                                    <Label Text="SportProfiles uses a member's public instagram posts to show their images. In order for this feature to work, you will need to do the following: " Padding="0,0,0,0"/>

                                    <Label Text="Go to instagram.com and do:" FontSize="16" TextColor="Brown" FontAttributes="Bold" Margin="0,7,0,7" />

                                    <Label Text="1. Create or use an existing instagram account." Margin="0,0,0,0" />
                                    <Label Text="2. Log into the account." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="3. Add photos of yourself by creating public posts."  Margin="0,0,0,0" />
                                    <Label Text="4. Note or copy your instagram username and your instagram URL (i.e.www.intagram.com/username)." Margin="0,0,0,0" />

                                    <Label Text="Return here and do:" FontSize="16" TextColor="Brown" FontAttributes="Bold" Margin="0,7,0,7" />

                                    <Label Text="1. Enter or paste your instagram URL to the text below." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="2. Click the save button to store it in our system. We'll use it to redirect people who wants to view your photos." FontSize="14"  Margin="0,0,0,0" />

                                    <StackLayout HorizontalOptions="Fill" Spacing="1" Padding="0,15,0,0">
                                        <Label Text="Your Instagram URL:" TextColor="Brown" FontAttributes="Bold" FontSize="16" ></Label>
                                    </StackLayout>
                                    <Entry  Keyboard="Text" x:Name="InstagramURL" WidthRequest="320" Text="{Binding ProfileContactInfo.Instagram}" HorizontalOptions="Start"/>
                                    <Button Margin="0,15,0,0" Text="Save" CornerRadius="20"
                                         BackgroundColor="{StaticResource Blue100Accent}" Clicked="OnPhotosButtonClicked" HorizontalOptions="Start"
                                         TextColor="White" FontAttributes="Bold" />

                                </StackLayout>
                            </ScrollView>
                        </Grid>
                                </StackLayout>
                                <StackLayout Padding="0,15,0,0"
                                    x:Name="aiLayoutPhoto"
                                    IsVisible="{Binding IsRefreshing}" 
                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                    AbsoluteLayout.LayoutFlags="All"
                                    BackgroundColor="White" Opacity="1.9">
                                <ActivityIndicator
                                      x:Name="aiPhoto"
                                      IsRunning="{Binding IsRefreshing}"
                                      HorizontalOptions="CenterAndExpand"
                                      VerticalOptions="Center"
                                      Color="Black"/>
                                <Label Text="Loading Data..." HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
                      </StackLayout>

                     </AbsoluteLayout>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>

                <tabView:SfTabItem Header="Videos">
                    <tabView:SfTabItem.Content>

                         <AbsoluteLayout VerticalOptions="FillAndExpand">
                            <StackLayout BackgroundColor="White">
                               
                        <Grid RowDefinitions="*, *" RowSpacing="0" x:Name="videossGrid">
                            <ScrollView x:Name="videosView" Grid.Row="0" VerticalOptions="Fill">
                                <StackLayout BackgroundColor="White" Padding="10" Spacing="3" WidthRequest="380">

                                    <Label Text="SportProfiles uses a member's public youtube playlists to show and play their videos. In order for this feature to work, you will need to follow the instructions below to get it setup: " Padding="0,0,0,0"/>

                                    <Label Text="Go to youtube.com and do:" FontSize="16" FontAttributes="Bold" TextColor="Brown" Margin="0,7,0,7"/>

                                    <Label Text="1. Create or use an existing youtube account." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="2. Log into your account." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="3. Click on the top far right circle with your 1 or 2 letters of your initial." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="4. Select 'Channel' from the presented menu list." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="5. Click on 'Customized Channel'." FontSize="14"  Margin="0,0,0,0" />
                                    <Label LineBreakMode="WordWrap" Text="6. Use the 'Customize Channel' page to create and manage playlists and videos." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="7. Click on the top far right circle with your 1 or 2 letters of your initial again." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="8. Click on 'Settings' from the presented menu list." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="9. Click on 'View Advance Settings' next." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="10. Copy the 'Chanel ID' value string." FontSize="14"  Margin="0,0,0,0" />

                                    <Label Text="Return here and do:" FontSize="16" FontAttributes="Bold" TextColor="Brown" Margin="0,7,0,7" />

                                    <Label Text="1. Paste the 'Chanel ID' value string to the text box below." FontSize="14"  Margin="0,0,0,0" />
                                    <Label Text="2. Click the save button to store the Chanel ID in our system. We will use it to pull your playlist to show to others." FontSize="14"  Margin="0,0,0,0" />


                                    <StackLayout HorizontalOptions="Fill" Spacing="1" Padding="0,15,0,0">
                                        <Label Text="Youtube Channel ID:" TextColor="Brown" FontAttributes="Bold" FontSize="16" ></Label>
                                    </StackLayout>
                                    <Entry Text="{Binding ProfileBasicInfo.ChannelID}" Keyboard="Text" x:Name="ChannelID" HorizontalOptions="Start" WidthRequest="270"  />
                                    <Button Margin="0,15,0,0" Text="Save"  CornerRadius="20"
                                     BackgroundColor="{StaticResource Blue100Accent}" Clicked="OnVideosButtonClicked" HorizontalOptions="Start"
                                     TextColor="White" FontAttributes="Bold" />
                                    <StackLayout Padding="0, 340, 70,0" HorizontalOptions="Start"></StackLayout>

                                </StackLayout>

                            </ScrollView>
                        </Grid>
                      </StackLayout>

                      <StackLayout Padding="0,15,0,0"
                                    x:Name="aiLayoutVid"
                                    IsVisible="{Binding IsRefreshing}" 
                                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                                    AbsoluteLayout.LayoutFlags="All"
                                    BackgroundColor="White" Opacity="1.9">
                                <ActivityIndicator
                                      x:Name="aiVid"
                                      IsRunning="{Binding IsRefreshing}"
                                      HorizontalOptions="CenterAndExpand"
                                      VerticalOptions="Center"
                                      Color="Black"/>
                                <Label Text="Loading Data..." HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black"/>
                      </StackLayout>

                     </AbsoluteLayout>
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>

            </tabView:SfTabView.Items>
        </tabView:SfTabView>

    </StackLayout>

</ContentPage>
