<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" NavigationPage.HasNavigationBar="True"
    x:Class="spmaui.Views.ProfileVideoPlayerPage" Title="Video Player">

    <VerticalStackLayout>
        <Button x:Name="btnReturnToPlaylist"  FontSize="Medium"  WidthRequest="300"
                Clicked="OnReturnToPlayVideoPage_Clicked"
                TextColor="White" BorderColor="Black" BackgroundColor="{StaticResource Blue100Accent}"  CornerRadius="20"
                FlexLayout.AlignSelf="Stretch"  HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontAttributes="Bold" Text="Return to Videos"/>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="WhiteSmoke">
            <StackLayout>
                <WebView x:Name="webView" />
            </StackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
