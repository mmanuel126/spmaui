<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="spmaui.Views.Account.ConfirmRegisterPage"
             Title=" ">
    <VerticalStackLayout>

        <StackLayout Padding="0, 13,0, 0">
            <Image x:Name="imgLogo" Source="logo100.jpg" HeightRequest="40" WidthRequest="160" HorizontalOptions="Center" VerticalOptions="Center" />

            <Label x:Name="lblAppName" Text="Registration Confirmation" 
                      HorizontalTextAlignment="Center" FontAttributes="Bold" Padding="25,5,25,5"
                      TextColor="{StaticResource Gray900}" FontSize="18"/>

            <Label x:Name="lblInstruction" Text=""
                      
                      HorizontalTextAlignment="Center" FontAttributes="None"  Padding="20,5,20,5"
                      TextColor="{StaticResource Gray600}" FontSize="15"/>

            <Label x:Name="ReturnToLogin" Text="Return to Login" TextColor="Blue" FontSize="17" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" Padding="30,10,30,10"/>
            <Label Text=""></Label>

        </StackLayout>

    </VerticalStackLayout>
</ContentPage>
